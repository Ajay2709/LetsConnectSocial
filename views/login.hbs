<form class="form-signin text-center" method='post' action='/users/login'>
  <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>
  <div id='error_msg'></div>
  <input type="text" id="inputName" name="username" class="form-control" name='username' placeholder="Username" required autofocus>
