<body onload="javascript:populateCountries('inputCountry');">
<div id='error_msg' class='text-center'></div>
<form id='signup_form' class='form-signin text-center' style="margin:auto" method='post' action='/users/signup'>
  <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>

  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="email" id="inputEmail" class="form-control" placeholder="Email address"  autocomplete='email' required autofocus>
  <br>

  <label for="inputName" class="sr-only">Your name</label>
  <input type="text" id="inputName" class="form-control" placeholder="Name" required autofocus>
  <br>
  
  <label for="inputFirstName" class="sr-only">First Name</label>
  <input type="text" id="inputFirstName" class="form-control" placeholder="First Name" required autofocus>
  <br>
  
  <label for="inputLastName" class="sr-only">Last Name</label>
  <input type="text" id="inputLastName" class="form-control" placeholder="Last Name" required autofocus>
  <br>

  <label for="inputGender" class="sr-only">You are a</label>
  <select id ="inputGender" class="textbox" class="form-control" style="width:100px" id="gender">
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select>
  <br>
  
  <label for="inputDob" class="sr-only">Birthday</label>
  <input type="date" name="inputDob" id="inputDob" class="form-control" placeholder="Your Birthday" required>
  <br>
  
  <label for="inputCountry" class="sr-only">Country</label>
  <select class="textbox" type="text" id="inputCountry" class="form-control" placeholder="Your Country" required> </select>
  <br>
  
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
  <br>
  
  <label for="inputConfirmPassword" class="sr-only">Confirm Password</label>
  <input type="password" id="inputConfirmPassword" class="form-control" placeholder="Confirm Password" required>
  
  <button class="btn btn-lg btn-primary btn-block" type="button" onclick="javascript:signup();">Sign Up</button>
  
  <p class='text-center'> Already have an account?
    <!--<button class='btn btn-lg btn-primary btn-block' onclick="location.href='login'">Log In</button> -->
    <a href='./login'>Log In</a>
  </p>
</form>
