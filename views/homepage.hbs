<!DOCTYPE html>
<body onload="javascript:startfetch()">
	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>                        
	      </button>
	      <a class="navbar-brand">LetsConnect</a>
	    </div>
	    <div class="collapse navbar-collapse" id="myNavbar">
	      <ul class="nav navbar-nav navbar-right">
	       	<li><a href="logout"><span class="glyphicon glyphicon-log-out"></span>Log Out</a></li>
	      </ul>
	      <form class="navbar-form navbar-right" action="/users/searchpeople">
	        <div class="form-group input-group">
	          <input type="text" id='searchpeopleinput' name='searchpeopleinput' class="form-control" placeholder="Search for people here...">
	          <span class="input-group-btn">
	            <button class="btn btn-default" type="button"  onclick="javascript:searchPeople();">
	              <span class="glyphicon glyphicon-search"></span>
	            </button>
	          </span>        
	        </div>
	      </form>
	      <ul class="nav navbar-nav navbar-right">
	        <li><a href="myprofile"><span class="glyphicon glyphicon-user"	></span> {{{username}}}</a></li>
	      </ul>
	    </div>
	  </div>
	</nav>
	<!-- <a href="/users/template">template</a> -->
	<div class="container text-center">
		{{{msg}}}	
		<div class="row" id='searchresult'></div> 
  		<div class="row">
  			<div class="col-sm-3 well">
		      <img src="/images/{{{dp}}}" class="img-rounded" height="100%" width="100%" alt="Avatar"><br>
		      <a href="myprofile">Your Profile</a>
		  	</div>
			<div class="col-sm-7">
				<div class="row">
					<div class="col-sm-12">
						<div class="panel panel-default text-left">
							<div class="panel-body">
								<div id='postbox' class="col-75">
										<form id = "addPhoto" style="margin:auto" method="POST" action="/users/homepage" enctype="multipart/form-data">
											<textarea  id="postText" name="postText" class="posttext" placeholder="Write something..."  required></textarea><br>
											<label for="postImage" class="btn btn-md btn-primary" id='postImageDiv'>Add Image
												<input type="file" id='postImage' class="file" name="postImage" accept="image/*" >
											</label> 
											<!-- <span id='postImageName'></span> -->
											<span><button type="submit" class="btn btn-success">Post</button></span>
										</form>
								</div>     
							</div>
						</div>
					</div>
				</div>
				<div id='postnow'></div> 
			</div>
			<div class="col-sm-2 well" id='friendrequests'>
				<button type="button" class="btn btn-primary" onclick="javascript:showRequests();">Show Requests</button>
				<div id='newrequests'></div>
			</div>
			<div class="col-sm-2 well">
				<div id='myfriends'>
					<button type="button" class="btn btn-primary" onclick="javascript:showFriends();">My Friends</button>
				</div>
				<div id='friendlist'></div><br>
			</div>
		</div>		    
	</div>
</body>

	